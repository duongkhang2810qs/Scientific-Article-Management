extends index

block content
    .container-fluid.mt-4
        .card.shadow-lg.border-0.rounded-lg
            .card-header.bg-gradient-primary.text-white.text-center.py-4
                h3.font-weight-bold.text-uppercase Thay Đổi Mật Khẩu

            .card-body.p-4.bg-light
                form.change_pass
                    .form-group.mb-4
                        label.control-label Mật khẩu cũ
                        div.input-group
                            input#oldpassword.form-control.shadow-sm(type="password" name="id" required placeholder="Nhập mật khẩu cũ")
                            .input-group-append
                                .input-group-text
                                    i.fas.fa-lock

                    .form-group.mb-4
                        label.control-label Mật khẩu mới
                        div.input-group
                            input#password.form-control.shadow-sm(type="password" name="password" required placeholder="Nhập mật khẩu mới")
                            .input-group-append
                                .input-group-text
                                    i.fas.fa-lock

                    .form-group.mb-4
                        label.control-label Xác nhận mật khẩu
                        div.input-group
                            input(type="password" class="form-control.shadow-sm" name="cpass" placeholder="Xác nhận mật khẩu mới")
                            .input-group-append
                                .input-group-text
                                    i.fas.fa-lock
                        small#pass_match(data-status='')

                    hr
                    .d-flex.justify-content-end.mt-4
                        button.btn.btn-primary.px-4.py-2.mr-2(type="submit")
                            i.fas.fa-save.mr-2
                            | Lưu
                        button.btn.btn-secondary.px-4.py-2(type="button" onclick="location.href = './'")
                            i.fas.fa-times.mr-2
                            | Huỷ

    style.
        .bg-gradient-primary {
            background: linear-gradient(to right, #4e73df, #224abe);
        }

        .card {
            border-radius: 15px;
        }

        .card-header {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .form-control {
            border-radius: 8px;
            font-size: 1rem;
            padding: 0.75rem;
        }

        .input-group-text {
            background-color: #f8f9fc;
            border: 1px solid #ddd;
            border-left: 0;
        }

        .btn {
            font-size: 1rem;
            font-weight: bold;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #3751ff;
            color: #fff;
        }

        .btn-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }

        small#pass_match {
            display: block;
            margin-top: 0.5rem;
            font-size: 0.9rem;
        }

    script.
        $('[name="password"],[name="cpass"]').keyup(function(){
            var pass = $('[name="password"]').val()
            var cpass = $('[name="cpass"]').val()
            if(cpass == '' || pass == ''){
                $('#pass_match').attr('data-status','')
            }else{
                if(cpass == pass){
                    $('#pass_match').attr('data-status','1').html('<i class="text-success">Mật khẩu trùng khớp.</i>')
                }else{
                    $('#pass_match').attr('data-status','2').html('<i class="text-danger">Mật khẩu không trùng khớp.</i>')
                }
            }
        })

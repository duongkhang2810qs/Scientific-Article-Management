extends index 

block content
  .container-fluid.mt-4
    .card.shadow-lg.border-0.rounded-lg
      .card-header.bg-gradient-primary.text-white.text-center.py-4
        h3.font-weight-bold.text-uppercase Chi Tiết Thông Báo

      .card-body.p-4.bg-light
        .row
          .col-md-8
            .bg-white.shadow-sm.p-4.rounded.mb-4
              h5.font-weight-bold.text-primary.border-bottom.pb-2.mb-3 Thông báo
              p.text-dark= data.ThongBao

              h5.font-weight-bold.text-primary.border-bottom.pb-2.mb-3 Nội dung
              p.text-muted= data.NoiDung
          .col-md-4
            .bg-white.shadow-sm.p-4.rounded.mb-4
              h5.font-weight-bold.text-primary.border-bottom.pb-2.mb-3 Ngày đăng
              p.text-muted= data.createdAt.toLocaleDateString()

  style.
    .bg-gradient-primary {
      background: linear-gradient(to right, #4e73df, #224abe);
    }

    .rounded-lg {
      border-radius: 15px;
    }

    .shadow-lg {
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2) !important;
    }

    .shadow-sm {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .rounded {
      border-radius: 10px;
    }

    h5 {
      font-size: 1.2rem;
      color: #343a40;
      text-transform: capitalize;
    }

    p {
      font-size: 0.9rem;
      line-height: 1.6;
      color: #6c757d;
    }

    .border-bottom {
      border-bottom: 2px solid #007bff !important;
    }

    .text-primary {
      color: #007bff !important;
    }

    .card-header {
      font-weight: bold;
      font-size: 1.3rem;
    }

    .mb-4 {
      margin-bottom: 1.5rem !important;
    }

    .p-4 {
      padding: 1.5rem !important;
    }

extends index

block content
  .container-fluid
    .row
      .col-lg-12
        .card.shadow.mb-4
          .card-header.py-3.bg-gradient-primary.text-white
            h5.text-center.m-0.font-weight-bold Thêm Người Dùng

          .card-body.bg-light
            form.new-user
              .row
                .col-md-6
                  .form-group
                    label.control-label.font-weight-bold.text-dark Tên
                    input#name(type="text" name="name" class="form-control form-control-sm" required value="" placeholder="Nhập tên...")
                  .form-group
                    label.control-label.font-weight-bold.text-dark Vai trò người dùng
                    select.custom-select.custom-select-sm#roleSelect(name="role")
                      option(value="sinh_vien") Sinh viên
                      option(value="giang_vien") Giáo viên
                      option(value="admin") Admin
                    input#role(type="hidden" name="role" value="sinh_vien")
                  .form-group
                    label.control-label.font-weight-bold.text-dark Avatar
                    .custom-file
                      input(type="file" class="custom-file-input" id="customFile" name="img" onchange="displayImg(this,$(this))")
                      label.custom-file-label(for="customFile") Chọn file
                    img#cimg.mt-3.img-thumbnail

                .col-md-6
                  .form-group
                    label.control-label.font-weight-bold.text-dark ID
                    input#id.form-control.form-control-sm(type="text" name="id" required value="" placeholder="Nhập mã ID...")
                  .form-group
                    label.control-label.font-weight-bold.text-dark Mật khẩu
                    input#password.form-control.form-control-sm(type="password" name="password" required value="" placeholder="Nhập mật khẩu...")
                    small#pass_length.text-danger
                  .form-group
                    label.control-label.font-weight-bold.text-dark Xác nhận mật khẩu
                    input(type="password" class="form-control form-control-sm" name="cpass" placeholder="Nhập lại mật khẩu...")
                    small#pass_match(data-status='')

              hr
              .text-right
                button.btn.btn-success(type="submit")
                  i.fa.fa-save.mr-1
                  | Lưu
                button.btn.btn-secondary(type="button", onclick="location.href='./users'")
                  i.fa.fa-times.mr-1
                  | Hủy

  style.
    .card {
      border-radius: 12px;
      overflow: hidden;
    }
    .card-header {
      border-bottom: 2px solid rgba(255, 255, 255, 0.3);
    }
    .card-header .btn {
      margin-left: auto; /* Moves the button to the right */
    }
    .form-group label {
      font-size: 0.95rem;
      font-weight: bold;
    }
    .form-control-sm {
      font-size: 0.9rem;
    }
    img#cimg {
      height: 120px;
      width: 120px;
      object-fit: cover;
      border-radius: 50%;
      border: 2px solid #ddd;
    }
    .btn-sm {
      border-radius: 20px;
    }
    .btn i {
      font-size: 0.9rem;
    }
    #pass_match {
      display: block;
      font-size: 0.85rem;
    }
    #pass_length {
      display: block;
      font-size: 0.85rem;
    }
    .custom-file-label {
      font-size: 0.9rem;
    }
    .form-group input::placeholder {
      font-size: 0.85rem;
      color: #ccc;
    }

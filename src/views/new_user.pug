    /* Card Styling */
    .card {
      border-radius: 15px;
      overflow: hidden;
    }

    .card-header {
      background: linear-gradient(90deg, #007bff, #6c757d);
      text-align: center;
      font-size: 1.1rem;
      border-bottom: 1px solid #f1f1f1;
    }

    /* Form Styling */
    .form-group label {
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .form-control-sm, .custom-select-sm {
      border-radius: 0.25rem;
    }

    .custom-file-label::after {
      content: "Chọn";
    }

    /* Avatar Image Preview */
    img#cimg {
      height: 120px;
      width: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #007bff;
    }

    /* Button Styling */
    .btn {
      font-size: 0.9rem;
      padding: 8px 16px;
    }

    .rounded-pill {
      border-radius: 50px;
    }

    /* General Styling */
    hr {
      border-top: 1px solid #dee2e6;
      margin: 1rem 0;
    }

  script.
    $(document).ready(function() {
      // Update hidden input when role changes
      $("#roleSelect").change(function() {
        $("#role").val($(this).val());
      });

      // Password validation
      $('[name="password"],[name="cpass"]').keyup(function() {
        var pass = $('[name="password"]').val();
        var cpass = $('[name="cpass"]').val();

        if (cpass == '' || pass == '') {
          $('#pass_match').attr('data-status', '').html('');
        } else if (cpass == pass) {
          $('#pass_match').attr('data-status', '1').html('<i class="text-success">Khớp mật khẩu.</i>');
        } else {
          $('#pass_match').attr('data-status', '2').html('<i class="text-danger">Mật khẩu không khớp.</i>');
        }

        if (pass.length < 6) {
          $('#pass_length').html('<i class="text-danger">Mật khẩu phải có ít nhất 6 ký tự.</i>');
        } else {
          $('#pass_length').html('');
        }
      });

      // Prevent form submission if password is invalid
      $('.new-user').submit(function() {
        var pass = $('[name="password"]').val();
        if (pass.length < 6) {
          alert('Mật khẩu phải có ít nhất 6 ký tự.');
          return false; 
        }
      });
    });

    .card {
      border-radius: 12px;
      overflow: hidden;
    }

    .card-header {
      padding: 15px;
      font-size: 1.5rem;
      font-weight: bold;
      text-align: center;
      background: linear-gradient(45deg, #007bff, #6610f2);
      color: white;
    }

    .form-group label {
      font-weight: bold;
      font-size: 1.2rem;
      margin-bottom: 10px;
      display: block;

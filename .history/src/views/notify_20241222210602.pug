      font-size: 1rem;
      border-radius: 5px;
      border: 1px solid #ced4da;
      padding: 12px;
      resize: none;
    }

    textarea.form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn {
      padding: 10px 20px;
      font-size: 1rem;
      border-radius: 5px;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-secondary {
      background-color: #6c757d;

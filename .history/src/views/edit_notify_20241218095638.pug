//- Modal chỉnh sửa
div(id=`editNotify-${notify._id}`).modal
  div.modal-dialog(style="width: 80vw; margin-top: 0vh;")
    div.modal-content(style="max-height: 80vh; width: 100vh; overflow-y: auto; padding: 0 10px;")
      //- span.close(onclick="closeeditNotify()") &times;
      h3.mt-3 Chỉnh sửa thông báo
      form(id=`edit-form-${notify._id}`)
        label Thông báo
        input(type="text" name="editThongbao" class="form-control" id=`editThongbao-${notify._id}` required)
        label Nội dung
        textarea.mb-5.form-control(name="editNoidung" rows='50' id=`editNoidung-${notify._id}` required)            

        .col-lg-12.text-right.justify-content-center.d-flex.mb-3
          button.btn.btn-primary.mr-3(type="button" onclick=`saveEditForm('${notify._id}')`) Lưu
          button.btn.btn-secondary(type="button" onclick=`closeeditNotify('${notify._id}')`) Hủy


